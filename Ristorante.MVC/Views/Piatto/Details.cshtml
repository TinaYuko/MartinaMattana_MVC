@model PiattoViewModel
<h1>Dettagli del piatto:</h1>

<table class="table table-hover table-bordered table table-striped">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <th>Prodotto</th>
            <td>@Model.Descrizione</td>
        </tr>
        <tr>
            <th>Tipologia</th>
            <td>@Model.Tipologia</td>
        </tr>
        <tr>
            <th>Prezzo</th>
            <td>@Model.Prezzo</td>
        </tr>
        <tr>
            <th>Associato al Menu:</th>
            <td>@Model.MenuId</td>
        </tr>
    </tbody>
</table>

