@model List<MenuViewModel>
<h1>Lista Menu</h1>

@if (User.IsInRole("Administrator"))
{
    <a asp-controller="Menu" asp-action="Create" class="btn btn-outline-warning">Aggiungi Menu</a>
}
<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome Menu</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Visualizza</a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-controller="Menu" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">Modifica</a>
                        <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    }
                </td>

            </tr>
        }
    </tbody>

</table>
